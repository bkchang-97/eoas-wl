\begin{document}
\begin{equation} \tag{3}
\begin{split}
0&=I_{emit_R} - \epsilon \sigma T^4  - (1-abs)I_{emit_R}\\
0 &= \sigma T^4 - \epsilon \sigma T^4  - (1-abs)\sigma T^4 \\
0 &= 1 - \epsilon - (1 - abs) \\
0 &= - \epsilon + abs \\
\epsilon &= abs
\end{split}
\end{equation}
\end{document}